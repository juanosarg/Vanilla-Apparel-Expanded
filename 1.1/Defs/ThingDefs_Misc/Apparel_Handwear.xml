<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <!-- ##### Industrial ##### -->
    <!-- +++++ Gloves +++++ -->
    <ThingDef ParentName="ApparelMakeableBase">
		<defName>VAE_Handwear_Gloves</defName>
		<label>gloves</label>
		<description>A simple pair of gloves.</description>
		<graphicData>
			<texPath>Things/Handwear/Gloves</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<techLevel>Industrial</techLevel>
		<tradeability>Sellable</tradeability>
        <generateCommonality>0.1</generateCommonality>
		<stuffCategories>
			<li>Fabric</li>
			<li>Leathery</li>
		</stuffCategories>
		<costStuffCount>25</costStuffCount>
		<statBases>
			<MaxHitPoints>100</MaxHitPoints>
			<WorkToMake>1000</WorkToMake>
			<Mass>0.15</Mass>
			<StuffEffectMultiplierArmor>0.2</StuffEffectMultiplierArmor>
			<StuffEffectMultiplierInsulation_Cold>0.4</StuffEffectMultiplierInsulation_Cold>
			<StuffEffectMultiplierInsulation_Heat>0.08</StuffEffectMultiplierInsulation_Heat>
            <EquipDelay>2.0</EquipDelay>
		</statBases>
		<equippedStatOffsets>
			<ComfyTemperatureMin>-2</ComfyTemperatureMin> 
		</equippedStatOffsets>
		<thingCategories Inherit="False">
			<li>VAE_BootsAndGloves</li>
		</thingCategories>
		<apparel>
			<bodyPartGroups>
				<li>Hands</li>
			</bodyPartGroups>
			<layers>
				<li>Middle</li>
			</layers>
			<tags>
				<li>IndustrialBasic</li>
			</tags>
			<defaultOutfitTags>
				<li>Worker</li>
				<li>Soldier</li>
            </defaultOutfitTags>
		</apparel>
		<recipeMaker>
			<researchPrerequisite>ComplexClothing</researchPrerequisite>
			<recipeUsers Inherit="False">
				<li>ElectricTailoringBench</li>
				<li>HandTailoringBench</li>
			</recipeUsers>
		</recipeMaker>
		<colorGenerator Class="ColorGenerator_StandardApparel" />
    </ThingDef>

</Defs>